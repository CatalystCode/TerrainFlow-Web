@using System.Security.Policy

@{
    ViewData["Title"] = "Projects";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Your Projects</h3>
    </div>
    <div class="panel-body projects">
        @if (Model.Projects.Count == 0)
            {
            <p>You don't have any projects yet - would <a href="/Projects/Add">upload a file</a>?</p>
        }
        <ul>
            @foreach (var item in Model.Projects)
            {
                <li>
                    <span>@item.Name</span> <a href="javascript:void(0)" class="btn btn-raised btn-sm"><i class="material-icons">open_in_new</i> Open in TerrainFlow</a>
                </li>
            }
        </ul>
    </div>
</div>
